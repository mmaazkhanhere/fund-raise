generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id  String  @id @unique
  firstName String
  lastName String
  username String @unique
  email String @unique
  profileImage String
  campaigns Campaign[]
}

model Campaign{
  id   String    @id @default(uuid()) @unique
  title String
  tagline String
  imageUrl String
  category String
  niche String
  description String
  durationInDays Int
  fundGoal Float
  fundsReceiver String
  fundsReceiverStripeId String
  fundsWithdrawn Boolean @default(false)
  fundReceived      Float           @default(0)
  creatorId String
  createdAt DateTime @default(now())

  fundsReceivedLog FundReceivedLog[]
  creator User @relation(fields:[creatorId], references: [id], onDelete: Cascade)
}

model FundReceivedLog {
  id           String   @id @default(uuid()) @unique
  amount       Float @default(0)
  receivedAt   DateTime @default(now())
  campaignId   String
  campaign     Campaign @relation(fields: [campaignId], references: [id])
}